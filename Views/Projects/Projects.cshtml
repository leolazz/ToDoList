@model IEnumerable<ToDoList.DTOs.ProjectDto>
@{
    ViewData["Title"] = "Projects";
}
<h1 class="text-center text-white-50"> Projects </h1>

@{
<section style="background-color: #343a40"class="basic-grid">
    @foreach (var project in Model)
    {
        <section style="background-color: #343a40" class="basic-grid">
            <div class="list-group">
                <h3 class="card-header text-white-50" style="background-color:">@Html.ActionLink("Edit", "Edit", new {  @class = "btn-primary btn-sm text-white-50" }, null)</h3>
                <a href="#" class="list-group-item-Midnight list-group-item-action-dark flex-column align-items-start active">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1 text-white-50">@project.Title</h5>
                        <small>@project.CreatedDate.ToShortDateString()</small>
                    </div>
                    <p class="mb-1 text-white-50">@project.Description</p>
                    <small>Goals?.</small>
                </a>
                <div class="bs-component">
                    <ul class="list-group">
                        @{ foreach (var task in project.Tasks)
                            {

                                <li class="list-group-item-Midnight d-flex justify-content-between align-items-center text-white-50">
                                    @task.Title
                                    <span class="badge bg-primary rounded-pill">@task.EndDate.ToShortDateString()</span>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </section>
    }
    </section>

}
